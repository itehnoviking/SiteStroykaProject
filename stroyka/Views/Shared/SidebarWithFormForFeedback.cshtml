@model Feedback

<div asp-validation-summary="All" class="text-danger">
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label for=""></label>
            <input type="text" input asp-for="Name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Ваше имя">
            @*<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>*@
        </div>
        <div class="form-group">
            <label for=""></label>
            <input type="text" input asp-for="Phone" class="form-control" id="exampleInputPassword1" placeholder="Ваш телефон">
        </div>
        <div class="form-group">
            <label for="exampleFormControlTextarea1"></label>
            <textarea class="form-control" input asp-for="Message" id="exampleFormControlTextarea1" rows="3" placeholder="Ваше сообщение"></textarea>
            <label for="exampleFormControlTextarea1"></label>
        </div>
        <button type="submit" class="btn btn-primary">Отправить</button>
    </form>
</div>
